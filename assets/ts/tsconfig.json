{
  "compilerOptions": {
    "target": "es5",
    "module": "umd",
    "declaration": false,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "*.js",
  ]
}